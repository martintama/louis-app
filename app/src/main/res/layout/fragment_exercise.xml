<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.inclutec.louis.ui.fragments.ExerciseFragment">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reenviar"
        android:id="@+id/btnResend"

        android:layout_below="@+id/btnThumbsUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finalizar"
        android:id="@+id/btnFinish"
        android:longClickable="true"
        android:layout_alignTop="@+id/btnResend"
        android:layout_alignLeft="@+id/btnThumbsUp"
        android:layout_alignStart="@+id/btnThumbsUp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnThumbsDown"
        android:src="@drawable/ic_thumb_down_black_48dp"
        android:layout_above="@+id/btnResend"
        android:layout_alignRight="@+id/btnResend"
        android:layout_alignEnd="@+id/btnResend" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnThumbsUp"
        android:src="@drawable/ic_thumb_up_black_48dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/imgBraille"
        android:layout_toRightOf="@+id/btnThumbsDown"
        android:layout_toEndOf="@+id/btnThumbsDown"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tiempo restante:"
        android:id="@+id/textView8"
        android:textSize="24dp"
        android:layout_above="@+id/imgBraille"
        android:layout_toLeftOf="@+id/btnFinish"
        android:layout_toStartOf="@+id/btnFinish"
        android:layout_marginBottom="68dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="00:00"
        android:id="@+id/tvTimer"
        android:textSize="36dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignRight="@+id/imgBraille"
        android:layout_alignEnd="@+id/imgBraille" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/imgBraille"
        android:contentDescription="Celda braille"
        android:src="@drawable/braille_char_123456"
        android:layout_weight="2.81"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/txtCaracter"
        android:layout_toEndOf="@+id/txtCaracter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="A"
        android:id="@+id/txtCaracter"
        android:textSize="40dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnResend"
        android:layout_alignStart="@+id/btnResend"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp" />

</RelativeLayout>
