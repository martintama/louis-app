<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.inclutec.louis.ui.fragments.ExerciseFragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgTimer"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:contentDescription="@string/timer"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:layout_below="@id/imgTimer"
        android:id="@+id/linearLayoutBraille"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="A"
            android:id="@+id/txtCaracter"
            android:layout_marginLeft="50dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imgBraille"
            android:contentDescription="Celda braille"
            android:src="@drawable/braille_char_123456" />

    </LinearLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reenviar"
        android:id="@+id/btnResend"

        android:layout_marginBottom="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finalizar"
        android:id="@+id/btnFinish"
        android:layout_alignTop="@+id/btnResend"
        android:layout_alignRight="@+id/linearLayoutBraille"
        android:layout_alignEnd="@+id/linearLayoutBraille"
        android:longClickable="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnThumbsDown"
        android:src="@drawable/ic_thumb_down_black_48dp"
        android:layout_alignTop="@+id/btnThumbsUp"
        android:layout_toRightOf="@+id/btnResend"
        android:layout_toEndOf="@+id/btnResend" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnThumbsUp"
        android:src="@drawable/ic_thumb_up_black_48dp"
        android:layout_below="@+id/linearLayoutBraille"
        android:layout_toLeftOf="@+id/btnFinish"
        android:layout_toStartOf="@+id/btnFinish"
        android:layout_marginTop="28dp" />
</RelativeLayout>
